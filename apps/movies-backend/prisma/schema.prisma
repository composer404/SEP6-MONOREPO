// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------------------------------- User --------------------------------- */

model User {
  id                                  String @id @default(uuid())

  login                               String @unique
  password                            String
  email                               String @unique
  firstName                           String
  lastName                            String
  avatar                              String

  createdAt                           DateTime @default(now())
  updatedAt                           DateTime @updatedAt
}